<!-- 💌 デート記録カード（Bootstrap版・改善） -->
<!-- ============================== -->

<div class="moment-card">
  <!-- 📅 日付 -->
  <p class="mb-2"><strong>日付:</strong> <%= moment.date.strftime("%Y年%m月%d日") %></p>

  <!-- ✏️ メモ -->
  <% if moment.memo.present? %>
    <p class="memo"><strong>メモ:</strong> <%= moment.memo %></p>
  <% end %>

  <!-- 🖼️ 画像 -->
  <% if moment.image.attached? %>
    <div class="moment-image-wrapper">
      <%= image_tag moment.image, class: "moment-image" %>
    </div>
  <% end %>

  <!-- 📍 場所 -->
  <% if moment.location.present? %>
    <p class="text-muted"><strong>場所:</strong> <%= moment.location %></p>
  <% end %>
</div>
