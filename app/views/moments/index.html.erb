<!-- ============================== -->
<!-- 📅 デート記録一覧ページ -->
<!-- ============================== -->

<h2 class="text-xl font-bold mb-4">📅 ふたりのデート記録</h2>

<!-- ============================== -->
<!-- 📷 モーダル起動ボタン -->
<!-- ============================== -->
<div class="mb-4 text-end">
  <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#momentModal">
    ＋ 記録を投稿する
  </button>
</div>

<!-- ============================== -->
<!-- 📦 モーダル本体（Bootstrap構造） -->
<!-- ============================== -->
<div class="modal fade" id="momentModal" tabindex="-1" aria-labelledby="momentModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- 🧠 モーダルヘッダー -->
      <div class="modal-header">
        <h5 class="modal-title" id="momentModalLabel">デート記録を投稿する</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="閉じる"></button>
      </div>

      <!-- ✍️ モーダル本文（フォーム本体） -->
      <div class="modal-body" id="momentModal-body">
        <%= render partial: "form", locals: { moment: @moment } %>
      </div>

    </div>
  </div>
</div>

<!-- ============================== -->
<!-- ✅ Turbo用スクリプト差し込みエリア -->
<!-- ============================== -->
<div id="modal-script-placeholder"></div>

<!-- ============================== -->
<!-- 🗂 投稿一覧（Turbo差し替え対象） -->
<!-- ============================== -->
<!-- ✅ Turboで差し替えできるようidをつける -->
<div id="moment-list">
  <%= render partial: "moments/moment_list", locals: { moments: @moments } %>
</div>
