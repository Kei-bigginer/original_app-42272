<!-- ============================== -->
<!-- 📅 デート記録一覧ページ -->
<!-- ============================== -->

<h2 class="text-xl font-bold mb-4">📅 ふたりのデート記録</h2>

<!-- 💡 投稿ボタン（あとでモーダルに変えやすい構成） -->
<div class="mb-4">
  <%= link_to "＋ 記録を投稿する", new_moment_path, class: "btn btn-primary" %>
  <!-- ※あとでモーダルボタンに差し替える予定ならここをボタンタグに変更可 -->
</div>

<!-- ============================== -->
<!-- 🗂 投稿一覧（今後部分テンプレート化しやすい） -->
<!-- ============================== -->

<% if @moments.empty? %>
  <p class="text-gray-600">まだ記録がありません。思い出を残してみましょう！</p>
<% else %>
  <div class="space-y-6">
    <% @moments.each do |moment| %>
      <%= render partial: "moment", locals: { moment: moment } %>
      <!-- ✅ 部分テンプレート _moment.html.erb に切り出して拡張性UP -->
    <% end %>
  </div>
<% end %>
