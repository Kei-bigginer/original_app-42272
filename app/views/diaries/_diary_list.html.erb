<!-- ✅ _diary_list.html.erb：日常投稿一覧（1画像＝1カード構成） -->
<% if diaries.empty? %>
  <p class="text-muted">まだ日常の投稿がありません。</p>
<% else %>
  <% diaries.each do |diary| %>
    <% diary.images.each do |image| %>
      <div class="diary-item mb-3 p-2 border rounded">
        <!-- 🖼️ 各画像を個別にカード風に表示 -->
        <%= image_tag image.variant(resize_to_limit: [300, 300]), class: "img-thumbnail mb-2" %>

        <!-- 📅 投稿日を表示 -->
        <p class="text-muted small mb-0">
          📅 <%= diary.created_at.strftime("%Y年%m月%d日") %>
        </p>
      </div>
    <% end %>
  <% end %>
<% end %>
